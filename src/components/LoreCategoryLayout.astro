---
import Layout from "../layouts/Layout.astro";

interface Props {
    title: string;
    description: string;
    items: any[];
    basePath: string;
}

const { title, description, items, basePath } = Astro.props;
---

<Layout title={title} description={description}>
    <div class="category-page">
        <header class="page-header">
            <h1>{title}</h1>
            <p class="subtitle">
                {description}
            </p>
        </header>

        <div class="items-grid">
            {
                items.map((item) => {
                    // Extract just the filename from the slug
                    const filename = item.slug.split("/").pop() || item.slug;
                    return (
                        <article class="item-card">
                            <a
                                href={`${basePath}/${filename}`}
                                class="item-link"
                            >
                                <h2 class="item-title">{item.data.title}</h2>
                                <p class="item-description">
                                    {item.data.description}
                                </p>
                                <div class="item-meta">
                                    <span class="item-source">
                                        {item.data.source}
                                    </span>
                                    {item.data.updatedDate && (
                                        <time class="item-date">
                                            {new Date(
                                                item.data.updatedDate,
                                            ).toLocaleDateString("es-ES", {
                                                year: "numeric",
                                                month: "2-digit",
                                                day: "2-digit",
                                            })}
                                        </time>
                                    )}
                                </div>
                            </a>
                        </article>
                    );
                })
            }
        </div>
    </div>
</Layout>

<style>
    .category-page {
        max-width: 1200px;
        margin: 0 auto;
        padding: var(--spacing-2xl) var(--spacing-lg);
    }

    .page-header {
        text-align: center;
        margin-bottom: var(--spacing-2xl);
    }

    .page-header h1 {
        font-size: var(--text-5xl);
        font-weight: 800;
        margin-bottom: var(--spacing-md);
        color: var(--color-secondary);
    }

    .subtitle {
        font-size: var(--text-xl);
        color: var(--color-text-light);
        max-width: 600px;
        margin: 0 auto;
    }

    .items-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: var(--spacing-lg);
    }

    .item-card {
        background: white;
        border: 1px solid var(--color-border);
        border-left: 4px solid var(--color-secondary);
        box-shadow: var(--shadow-md);
        transition: all 0.2s ease;
        overflow: hidden;
        position: relative;
    }

    .item-card::before {
        content: "";
        position: absolute;
        top: 0;
        right: 0;
        border-width: 0 20px 20px 0;
        border-style: solid;
        border-color: #f4f1e8 #e0e0e0;
    }

    .item-card:hover {
        border-color: var(--color-primary);
        box-shadow: var(--shadow-lg);
        transform: translateY(-2px);
    }

    .item-link {
        display: block;
        padding: var(--spacing-lg);
        text-decoration: none;
        color: inherit;
    }

    .item-title {
        font-size: var(--text-xl);
        font-weight: 700;
        margin-bottom: var(--spacing-sm);
        color: var(--color-secondary);
        transition: color 0.2s ease;
        text-transform: uppercase;
        border-bottom: 1px dashed var(--color-border);
        padding-bottom: 0.5rem;
    }

    .item-card:hover .item-title {
        color: var(--color-primary);
    }

    .item-description {
        font-size: var(--text-base);
        color: var(--color-text);
        line-height: 1.6;
        margin-bottom: var(--spacing-md);
    }

    .item-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: var(--spacing-sm);
        padding-top: var(--spacing-sm);
        border-top: 1px solid var(--color-border);
        font-size: var(--text-sm);
    }

    .item-source {
        color: var(--color-text-light);
        font-weight: 600;
        flex: 1;
    }

    .item-date {
        color: var(--color-accent);
        font-weight: 500;
        white-space: nowrap;
    }

    @media (max-width: 768px) {
        .items-grid {
            grid-template-columns: 1fr;
        }

        .page-header h1 {
            font-size: var(--text-4xl);
        }

        .item-meta {
            flex-direction: column;
            align-items: flex-start;
        }
    }
</style>
