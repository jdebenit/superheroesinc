---
import Search from "../components/Search";

const links = [
  { name: "Inicio", href: "/" },
  { name: "Blog", href: "/blog" },
  { name: "Archivo del Lore", href: "/lore" },
  { name: "Personajes", href: "/personajes" },
  { name: "Recursos", href: "/recursos" },
];
---

<header class="navbar">
  <div class="container">
    <a href="/" class="logo">
      <img src="/logo_SHI.png" alt="Superheroes INC Logo" class="logo-img" />
      <span class="security-level">NIVEL 7</span>
    </a>

    <div class="nav-right">
      <div class="search-wrapper">
        <Search client:load />
      </div>

      <nav>
        <ul class="nav-links">
          {
            links.map((link) => (
              <li>
                <a href={link.href} class="nav-link">
                  [{link.name.toUpperCase()}]
                </a>
              </li>
            ))
          }
        </ul>
      </nav>
    </div>
  </div>
</header>

<style>
  .navbar {
    background-color: var(--color-background);
    color: var(--color-secondary);
    padding: 0.5rem 0;
    border-bottom: 2px solid var(--color-secondary);
    border-top: 4px solid var(--color-secondary);
    position: sticky;
    top: 0;
    z-index: 100;
    box-shadow: var(--shadow-md);
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 1rem;
    text-decoration: none;
  }

  .logo-img {
    height: 60px;
    width: auto;
    filter: grayscale(100%) contrast(120%); /* Document style */
    transition: filter 0.3s ease;
  }

  .logo:hover .logo-img {
    filter: none; /* Color on hover */
  }

  .security-level {
    font-size: 0.8rem;
    border: 1px solid var(--color-primary);
    color: var(--color-primary);
    padding: 0.1rem 0.5rem;
    letter-spacing: 0.1em;
    transform: rotate(-2deg);
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 2rem;
    flex: 1;
    justify-content: flex-end;
  }

  .search-wrapper {
    max-width: 300px;
    flex: 1;
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
    white-space: nowrap;
  }

  .nav-link {
    color: var(--color-secondary);
    text-decoration: none;
    font-family: var(--font-heading);
    font-size: 0.9rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: all 0.2s;
    position: relative;
  }

  .nav-link:hover {
    color: var(--color-primary);
    background-color: rgba(0, 0, 0, 0.05);
  }

  @media (max-width: 1024px) {
    .container {
      flex-wrap: wrap;
    }

    .search-wrapper {
      order: 3;
      max-width: 100%;
      width: 100%;
    }

    .nav-right {
      width: 100%;
      justify-content: space-between;
    }
  }

  @media (max-width: 768px) {
    .container {
      flex-direction: column;
      gap: 1rem;
    }

    .nav-right {
      flex-direction: column;
      width: 100%;
      gap: 1rem;
    }

    .search-wrapper {
      max-width: 100%;
    }

    .nav-links {
      gap: 1rem;
      flex-wrap: wrap;
      justify-content: center;
    }

    .nav-link {
      font-size: 0.85rem;
    }
  }
</style>
