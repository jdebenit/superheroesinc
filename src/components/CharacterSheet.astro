---
interface Props {
    rpg: {
        origin?: { cost: number | string; items: any[] };
        attributes?: {
            cost: number | string;
            values: Record<string, number | string>;
        };
        skills?: { cost: number | string; items: any[] };
        specialskills?: {
            cost: number | string;
            items: any[];
        };
        powers?: {
            cost: number | string;
            items: any[];
        };
        background?: {
            cost: number | string;
            items: any[];
        };
        equipment?: {
            cost: number | string;
            items: any[];
        };
        weapons?: {
            cost: number | string;
            items: any[];
        };
        combatstats?: string[];
        otherstats?: string[];
        notes?: string | string[];
        totalCost?: number | string;
        level?: number | string;
        other?: string[];
    };
}

import RpgItem from "./RpgItem.astro";

const { rpg } = Astro.props;

const combatStats = rpg.combatstats || [];
const otherStats = rpg.otherstats || rpg.other || [];
---

<div class="character-sheet" id="character-sheet">
    <div class="sheet-header">
        <h3>Ficha de Personaje</h3>
        <div class="header-stats">
            {rpg.level && <span class="level-badge">Nivel {rpg.level}</span>}
            {
                rpg.totalCost && (
                    <span class="total-cost">Total PCs: {rpg.totalCost}</span>
                )
            }
        </div>
    </div>

    <div class="sheet-grid">
        {
            combatStats.length > 0 && (
                <div class="sheet-section combat-section">
                    <div class="section-header">
                        <h4>Resumen de Combate</h4>
                    </div>
                    <div class="combat-grid">
                        {combatStats.map((item) => {
                            const [label, value] = item
                                .split(":")
                                .map((s) => s.trim());
                            return (
                                <div class="combat-stat-box">
                                    <span class="stat-label">{label}</span>
                                    <span class="stat-value">{value}</span>
                                </div>
                            );
                        })}
                    </div>
                </div>
            )
        }

        {
            rpg.origin && (
                <div class="sheet-section origin">
                    <div class="section-header">
                        <h4>Origen</h4>
                        <span class="cost">({rpg.origin.cost} PCs)</span>
                    </div>
                    <ul>
                        {rpg.origin.items.map((item) => (
                            <RpgItem item={item} />
                        ))}
                    </ul>
                </div>
            )
        }

        {
            otherStats.length > 0 && (
                <div class="sheet-section other">
                    <div class="section-header">
                        <h4>Datos de Combate</h4>
                    </div>
                    <ul>
                        {otherStats.map((item) => (
                            <RpgItem item={item} />
                        ))}
                    </ul>
                </div>
            )
        }

        {
            rpg.attributes && (
                <div class="sheet-section attributes">
                    <div class="section-header">
                        <h4>Características</h4>
                        <span class="cost">({rpg.attributes.cost} PCs)</span>
                    </div>
                    <div class="attr-grid">
                        {Object.entries(rpg.attributes.values).map(
                            ([key, value]) => (
                                <div class="attr-item">
                                    <span class="attr-label">{key}</span>
                                    <span class="attr-value">{value}</span>
                                </div>
                            ),
                        )}
                    </div>
                </div>
            )
        }

        {
            rpg.powers && (
                <div class="sheet-section powers">
                    <div class="section-header">
                        <h4>Poderes</h4>
                        <span class="cost">({rpg.powers.cost} PCs)</span>
                    </div>
                    <ul>
                        {rpg.powers.items.map((item) => (
                            <RpgItem item={item} />
                        ))}
                    </ul>
                </div>
            )
        }

        {
            rpg.weapons && (
                <div class="sheet-section weapons">
                    <div class="section-header">
                        <h4>Armas</h4>
                        <span class="cost">({rpg.weapons.cost} PCs)</span>
                    </div>
                    <ul>
                        {rpg.weapons.items.map((item) => (
                            <RpgItem item={item} />
                        ))}
                    </ul>
                </div>
            )
        }

        {
            rpg.skills && (
                <div class="sheet-section skills">
                    <div class="section-header">
                        <h4>Habilidades</h4>
                        <span class="cost">({rpg.skills.cost} PCs)</span>
                    </div>
                    <ul>
                        {rpg.skills.items.map((item) => (
                            <RpgItem item={item} />
                        ))}
                    </ul>
                </div>
            )
        }

        {
            rpg.specialskills && (
                <div class="sheet-section special-skills">
                    <div class="section-header">
                        <h4>Habilidades Especiales</h4>
                        <span class="cost">({rpg.specialskills.cost} PCs)</span>
                    </div>
                    <ul>
                        {rpg.specialskills.items.map((item) => (
                            <RpgItem item={item} />
                        ))}
                    </ul>
                </div>
            )
        }

        {
            rpg.background && (
                <div class="sheet-section background">
                    <div class="section-header">
                        <h4>Historial</h4>
                        <span class="cost">({rpg.background.cost} PCs)</span>
                    </div>
                    <ul>
                        {rpg.background.items.map((item) => (
                            <RpgItem item={item} />
                        ))}
                    </ul>
                </div>
            )
        }

        {
            rpg.equipment && (
                <div class="sheet-section equipment">
                    <div class="section-header">
                        <h4>Equipamiento</h4>
                        <span class="cost">({rpg.equipment.cost} PCs)</span>
                    </div>
                    <ul>
                        {rpg.equipment.items.map((item) => (
                            <RpgItem item={item} />
                        ))}
                    </ul>
                </div>
            )
        }

        {
            rpg.notes && (
                <div class="sheet-section notes">
                    <div class="section-header">
                        <h4>Notas</h4>
                    </div>
                    <div class="notes-content">
                        {Array.isArray(rpg.notes) ? (
                            <ul>
                                {rpg.notes.map((note) => (
                                    <li>{note}</li>
                                ))}
                            </ul>
                        ) : (
                            <p>{rpg.notes}</p>
                        )}
                    </div>
                </div>
            )
        }
    </div>
</div>

<style>
    .character-sheet {
        background-color: #f9f7f1;
        border: 1px solid #d3d0c2;
        padding: 2rem;
        margin: 2rem 0;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.05);
        font-family: var(--font-body);
        position: relative;
    }

    .character-sheet::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
        background: repeating-linear-gradient(
            45deg,
            var(--color-primary),
            var(--color-primary) 10px,
            transparent 10px,
            transparent 20px
        );
        opacity: 0.5;
    }

    .sheet-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 2px solid var(--color-secondary);
        margin-bottom: 1.5rem;
        padding-bottom: 0.5rem;
    }

    .sheet-header h3 {
        margin: 0;
        font-size: 1.5rem;
        color: var(--color-primary-dark);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .header-stats {
        display: flex;
        gap: 1rem;
        align-items: center;
    }

    .level-badge {
        background: var(--color-primary);
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 2px;
        font-weight: bold;
        font-family: var(--font-display);
        text-transform: uppercase;
    }

    .total-cost {
        font-weight: bold;
        font-family: var(--font-display);
        background: var(--color-secondary);
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 2px;
    }

    .combat-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        justify-content: space-between;
    }

    .combat-stat-box {
        display: flex;
        flex-direction: column;
        align-items: center;
        flex: 1;
        min-width: 120px;
        border: 1px solid #e0e0e0;
        padding: 0.5rem;
        background: white;
        border-radius: 4px;
    }

    .combat-stat-box .stat-label {
        font-size: 0.8rem;
        text-transform: uppercase;
        color: #666;
        text-align: center;
        margin-bottom: 0.25rem;
    }

    .combat-stat-box .stat-value {
        font-size: 1.2rem;
        font-weight: bold;
        color: var(--color-primary-dark);
        font-family: var(--font-display);
    }

    .sheet-grid {
        column-count: 1;
        column-gap: 2rem;
    }

    @media (min-width: 768px) {
        .sheet-grid {
            column-count: 2;
        }

        .sheet-section.powers,
        .sheet-section.combat-section {
            column-span: all;
            margin-top: 2rem;
        }
    }

    .sheet-section {
        background: rgba(255, 255, 255, 0.5);
        padding: 1rem;
        border: 1px dashed #ccc;
        break-inside: avoid;
        margin-bottom: 2rem;
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        margin-bottom: 1rem;
        border-bottom: 1px solid #eee;
        padding-bottom: 0.25rem;
    }

    .section-header h4 {
        margin: 0;
        color: var(--color-secondary);
        font-size: 1.1rem;
    }

    .cost {
        font-size: 0.9rem;
        color: #666;
        font-family: var(--font-display);
    }

    ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    li {
        margin-bottom: 0.5rem;
        padding-left: 1.2rem;
        position: relative;
    }

    li::before {
        content: "•";
        color: var(--color-primary);
        position: absolute;
        left: 0;
        font-weight: bold;
    }

    .attr-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
        gap: 1rem;
    }

    .attr-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        border: 1px solid #ddd;
        padding: 0.5rem;
        background: white;
    }

    .attr-label {
        font-size: 0.8rem;
        text-transform: uppercase;
        color: #666;
        margin-bottom: 0.25rem;
    }

    .attr-value {
        font-size: 1.25rem;
        font-weight: bold;
        color: var(--color-primary-dark);
        font-family: var(--font-display);
    }
</style>
