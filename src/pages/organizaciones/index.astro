---
import { getCollection } from "astro:content";
import LoreCategoryLayout from "../../components/LoreCategoryLayout.astro";

const organizations = (await getCollection("lore"))
    .filter((entry) => entry.data.category === "organizaciones")
    .sort((a, b) => a.data.title.localeCompare(b.data.title));
---

<LoreCategoryLayout
    title="Organizaciones"
    description="Explora las organizaciones, agencias y corporaciones que dan forma al universo de Superhéroes INC. Descubre CISS, Superheroes INC, PSYKOSIS, Corte Itinerante y más."
    items={organizations}
    basePath="/organizaciones"
/>
