---
import Layout from "../../layouts/Layout.astro";

const categories = [
  {
    id: "localizaciones",
    title: "Localizaciones",
    description: "Lugares emblemáticos del mundo de Superheroes INC.",
    image: "/lore/localizaciones.png",
  },
  {
    id: "organizaciones",
    title: "Organizaciones",
    description: "Agencias, corporaciones y sectas que mueven los hilos.",
    image: "/lore/organizaciones.png",
  },
  {
    id: "grupos",
    title: "Grupos",
    description: "Equipos de superhéroes y villanos.",
    image: "/lore/grupos.png",
  },
  {
    id: "eventos",
    title: "Eventos",
    description: "Eventos relevantes en la historia de Superheroes INC.",
    image: "/lore/tecnoguerra.png",
  },
  {
    id: "criaturas",
    title: "Criaturas",
    description: "Criaturas que pueblan el multiverso.",
    image: "/lore/criaturas.png",
  },
  {
    id: "entidades",
    title: "Entidades",
    description: "Entidades que rigen la manifestacion.",
    image: "/lore/entidades.png",
  },
];
---

<Layout title="Lore">
  <section class="lore-landing">
    <h1 class="page-title">Archivo de Lore</h1>
    <p class="intro-text">
      Explora la base de datos de Superheroes INC. Aquí encontrarás información
      clasificada sobre el mundo, sus habitantes y las fuerzas que lo gobiernan.
    </p>

    <div class="categories-grid">
      {
        categories.map((cat) => (
          <a href={`/lore/${cat.id}`} class="category-card">
            <div
              class="card-image"
              style={`background-image: url(${cat.image})`}
            />
            <div class="card-content">
              <h2>{cat.title}</h2>
              <p>{cat.description}</p>
            </div>
          </a>
        ))
      }
    </div>
  </section>
</Layout>

<style>
  .lore-landing {
    padding: 2rem 0;
    text-align: center;
    max-width: 1400px;
    margin: 0 auto;
  }

  .page-title {
    font-size: 3.5rem;
    margin-bottom: 1rem;
    color: var(--color-secondary);
    text-shadow: 3px 3px 0px var(--color-primary);
  }

  .intro-text {
    font-size: 1.2rem;
    max-width: 800px;
    margin: 0 auto 3rem;
  }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .category-card {
    display: block;
    text-decoration: none;
    color: inherit;
    border: 4px solid var(--color-secondary);
    background: white;
    transition:
      transform 0.2s,
      box-shadow 0.2s;
    overflow: hidden;
  }

  .category-card:hover {
    transform: translateY(-5px);
    box-shadow: 8px 8px 0px var(--color-primary);
  }

  .card-image {
    height: 200px;
    background-size: cover;
    background-position: center;
    border-bottom: 4px solid var(--color-secondary);
  }

  .card-content {
    padding: 1.5rem;
  }

  .card-content h2 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
    color: var(--color-secondary);
  }
</style>
