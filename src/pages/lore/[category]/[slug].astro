---
import { getCollection, getEntry } from "astro:content";
import Layout from "../../../layouts/Layout.astro";
import CharacterSheet from "../../../components/CharacterSheet.astro";
import ActualPlayMetadata from "../../../components/ActualPlayMetadata.astro";
import ReplayModeSelector from "../../../components/ReplayModeSelector.astro";

export async function getStaticPaths() {
  const items = await getCollection("lore");
  return items.map((item) => {
    // Extract just the filename from the slug (e.g., "localizaciones/aquera" -> "aquera")
    const filename = item.slug.split("/").pop() || item.slug;
    return {
      params: { category: item.data.category, slug: filename },
      props: item,
    };
  });
}

const item = Astro.props;
const { Content } = await item.render();

// Fetch RPG data if rpgId is present
let rpgData = null;
if (item.data.rpgId) {
  try {
    const rpgEntry = await getEntry("rpg", item.data.rpgId);
    if (rpgEntry) {
      rpgData = rpgEntry.data;
    }
  } catch (error) {
    console.error(`Failed to load RPG data for ${item.data.rpgId}:`, error);
  }
}
---

<Layout title={item.data.title}>
  <article class="lore-item-container">
    <div class="breadcrumb">
      <a href={`/lore/${item.data.category}`} class="back-link"
        >‚Üê Volver a {item.data.category}</a
      >
    </div>

    <div class="content-grid">
      <aside class="sidebar">
        {
          rpgData && (
            <a href="#character-sheet" class="rpg-link">
              <span class="rpg-icon">üé≤</span>
              <span class="rpg-label">Ver Ficha de Personaje</span>
            </a>
          )
        }

        {
          item.data.image && (
            <div class="lore-image-container">
              <img
                src={item.data.image}
                alt={item.data.title}
                class="lore-image"
              />
            </div>
          )
        }

        {
          item.data.category === "actual-plays" ? (
            <ActualPlayMetadata item={item} />
          ) : (
            <div class="lore-metadata">
              {item.data.source && (
                <div class="metadata-item">
                  <span class="label">Fuente:</span>
                  <span class="value">{item.data.source}</span>
                </div>
              )}
              {item.data.updatedDate && (
                <div class="metadata-item">
                  <span class="label">Actualizado:</span>
                  <time class="value">
                    {new Date(item.data.updatedDate).toLocaleDateString(
                      "es-ES",
                      {
                        year: "numeric",
                        month: "long",
                        day: "numeric",
                      },
                    )}
                  </time>
                </div>
              )}
            </div>
          )
        }
      </aside>

      <main class="main-content">
        <header class="lore-header">
          <h1 class="lore-title">{item.data.title}</h1>
        </header>

        {
          rpgData && (
            <a href="#character-sheet" class="rpg-link mobile-only">
              <span class="rpg-icon">üé≤</span>
              <span class="rpg-label">Ver Ficha de Personaje</span>
            </a>
          )
        }

        {item.data.category === "actual-plays" && (
          <ReplayModeSelector 
            players={item.data.players} 
            npcs={item.data.npcs} 
          />
        )}

        <div class="lore-text" data-category={item.data.category}>
          <Content />
        </div>

        {rpgData && <CharacterSheet rpg={rpgData} />}
      </main>
    </div>
  </article>
</Layout>

<style>
  .lore-item-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem 2rem;
  }

  .breadcrumb {
    margin-bottom: 2rem;
  }

  .back-link {
    display: inline-block;
    font-family: var(--font-comic);
    text-decoration: none;
    color: var(--color-accent);
    font-weight: 600;
  }

  .back-link:hover {
    color: var(--color-primary);
  }

  .content-grid {
    display: grid;
    grid-template-columns: 350px 1fr;
    gap: 3rem;
    align-items: start;
  }

  .sidebar {
    position: sticky;
    top: 100px;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .lore-image-container {
    border: 4px solid var(--color-secondary);
    box-shadow: 8px 8px 0px var(--color-secondary);
    border-radius: 4px;
    overflow: hidden;
  }

  .lore-image {
    width: 100%;
    height: auto;
    display: block;
  }

  .lore-metadata {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1rem;
    background: var(--color-background-alt);
    border-radius: 8px;
  }

  .metadata-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .label {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 700;
    color: var(--color-accent);
  }

  .value {
    font-size: 0.9rem;
    color: var(--color-text);
    font-weight: 600;
  }

  .lore-header {
    margin-bottom: 2rem;
    border-bottom: 4px solid var(--color-secondary);
    padding-bottom: 1rem;
  }

  .lore-title {
    font-size: 4rem;
    color: var(--color-secondary);
    text-transform: uppercase;
    line-height: 1;
  }

  .lore-text {
    font-size: 1.1rem;
    line-height: 1.6;
  }

  .lore-text :global(h2) {
    font-family: var(--font-comic);
    font-size: 2rem;
    color: var(--color-primary);
    margin-top: 2rem;
    margin-bottom: 1rem;
    border-bottom: 2px solid var(--color-secondary);
  }

  .lore-text :global(h3) {
    font-size: 1.5rem;
    color: var(--color-secondary);
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .lore-text :global(p) {
    margin-bottom: 1rem;
  }

  .lore-text :global(a) {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 600;
    border-bottom: 1px solid transparent;
    transition: border-color 0.2s;
  }

  .lore-text :global(a:hover) {
    border-bottom-color: var(--color-primary);
  }

  .lore-text :global(blockquote) {
    border-left: 4px solid var(--color-accent);
    background: rgba(0, 0, 0, 0.05);
    padding: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: var(--color-secondary);
  }

  .lore-text :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 4px;
    margin: 1.5rem 0;
    box-shadow: var(--shadow-md);
  }

  .lore-text :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
  }

  .lore-text :global(th),
  .lore-text :global(td) {
    padding: 0.75rem;
    text-align: left;
    border-bottom: 1px solid var(--color-border);
  }

  .lore-text :global(th) {
    background-color: var(--color-secondary);
    color: white;
    font-weight: 600;
  }

  .lore-text :global(tr:hover) {
    background-color: rgba(0, 0, 0, 0.02);
  }

  .lore-text :global(ul),
  .lore-text :global(ol) {
    margin: 1rem 0 1rem 2rem;
  }

  .lore-text :global(li) {
    margin-bottom: 0.5rem;
  }

  /* Actual Play Replay Script Styles */
  .lore-text :global(p:has(> strong)) {
    margin: 0.75rem 0;
  }

  /* NARR - Narrative text */
  .lore-text :global(p) {
    line-height: 1.8;
  }

  /* Scene markers */
  .lore-text :global(h2) {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 3px solid var(--color-secondary);
  }

  /* @scene and @location markers - style as code */
  .lore-text :global(p:has(code)) {
    font-size: 0.9rem;
    color: #666;
    font-style: italic;
  }

  /* Replay Mode Filtering - Based on data-type attributes */
  /* Using :global() to ensure styles apply to dynamically rendered content */
  
  /* Mode: Novela - Show only NARR and CHAR */
  :global(.lore-text.mode-novela p[data-type="player"]),
  :global(.lore-text.mode-novela p[data-type="gm"]),
  :global(.lore-text.mode-novela p[data-type="roll"]),
  :global(.lore-text.mode-novela p[data-type="rule"]),
  :global(.lore-text.mode-novela p[data-type="meta"]) {
    display: none !important;
  }

  /* Mode: Mesa - Show NARR, CHAR, PLAYER, GM */
  :global(.lore-text.mode-mesa p[data-type="roll"]),
  :global(.lore-text.mode-mesa p[data-type="rule"]),
  :global(.lore-text.mode-mesa p[data-type="meta"]) {
    display: none !important;
  }

  /* Mode: Reglas - Show NARR, ROLL, RULE */
  :global(.lore-text.mode-reglas p[data-type="char"]),
  :global(.lore-text.mode-reglas p[data-type="player"]),
  :global(.lore-text.mode-reglas p[data-type="gm"]),
  :global(.lore-text.mode-reglas p[data-type="meta"]) {
    display: none !important;
  }

  /* Mode: Completo - Show everything (default) */
  :global(.lore-text.mode-completo p) {
    display: block;
  }

  /* Visual styling for different content types */
  :global(.lore-text p[data-type]) {
    padding: 0.5rem 0;
    margin: 0.5rem 0;
  }

  :global(.lore-text p[data-type="narr"] strong:first-child) {
    color: #555;
    font-style: italic;
  }

  :global(.lore-text p[data-type="char"]) {
    background: rgba(255, 255, 255, 0.8);
    padding: 0.5rem 0.75rem;
    border-radius: 6px;
    margin: 0.5rem 0;
    line-height: 1.5;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  :global(.lore-text p[data-type="char"] strong:first-child) {
    color: var(--color-primary);
  }
  
  /* Character icon and name styling */
  :global(.char-icon) {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0;
    background: transparent;
    font-weight: 700;
    flex-shrink: 0;
  }
  
  :global(.char-avatar) {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    object-fit: cover;
  }
  
  :global(.char-name) {
    font-size: 0.9rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  /* Player icon styling (same as char-icon) */
  :global(.player-icon) {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0;
    background: transparent;
    font-weight: 700;
    flex-shrink: 0;
  }
  
  :global(.player-avatar) {
    width: 28px;
    height: 28px;
    border-radius: 50%;
    object-fit: cover;
  }
  
  :global(.player-name) {
    font-size: 0.85rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  /* Dice icon for ROLL */
  :global(.dice-icon) {
    font-size: 1.5rem;
    line-height: 1;
  }
  
  /* GM label styling */
  :global(.gm-label) {
    font-size: 0.85rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #88cc66;
    flex-shrink: 0;
  }
  
  /* Rule icon styling */
  :global(.rule-icon) {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0;
    background: transparent;
    font-weight: 700;
    flex-shrink: 0;
  }
  
  :global(.book-icon) {
    font-size: 1.2rem;
    line-height: 1;
  }
  
  :global(.rule-ref) {
    font-size: 0.85rem;
    font-weight: 700;
    color: #9966cc;
  }

  :global(.lore-text p[data-type="player"]) {
    background: rgba(102, 204, 255, 0.1);
    padding: 0.5rem 0.75rem;
    border-left: 3px solid #66ccff;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  :global(.lore-text p[data-type="player"] strong:first-child) {
    color: #0088cc;
  }

  :global(.lore-text p[data-type="gm"]) {
    background: rgba(136, 204, 102, 0.1);
    padding: 0.5rem 0.75rem;
    border-left: 3px solid #88cc66;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  :global(.lore-text p[data-type="gm"] strong:first-child) {
    color: #558833;
  }

  :global(.lore-text p[data-type="roll"]) {
    background: rgba(255, 153, 51, 0.1);
    padding: 0.5rem 0.75rem;
    border-left: 3px solid #ff9933;
    font-family: monospace;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  :global(.lore-text p[data-type="roll"] strong:first-child) {
    color: #cc6600;
  }

  :global(.lore-text p[data-type="rule"]) {
    background: rgba(153, 102, 204, 0.1);
    padding: 0.5rem 0.75rem;
    border-left: 3px solid #9966cc;
    font-size: 0.9rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  :global(.lore-text p[data-type="rule"] strong:first-child) {
    color: #663399;
  }

  :global(.lore-text p[data-type="meta"]) {
    background: rgba(150, 150, 150, 0.1);
    padding: 0.5rem;
    border-left: 3px solid #999;
    font-style: italic;
    font-size: 0.9rem;
  }

  :global(.lore-text p[data-type="meta"] strong:first-child) {
    color: #666;
  }

  .rpg-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: var(--spacing-md);
    background: var(--color-secondary);
    color: white;
    text-decoration: none;
    border-radius: 8px;
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease;
    margin-bottom: var(--spacing-md);
  }

  .rpg-link:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
    background: var(--color-primary-dark);
  }

  .rpg-icon {
    font-size: 1.5rem;
  }

  .rpg-label {
    font-weight: 700;
    text-transform: uppercase;
    font-size: var(--text-sm);
    letter-spacing: 0.05em;
  }

  .mobile-only {
    display: none;
  }

  @media (max-width: 1024px) {
    .content-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .sidebar {
      position: static;
      order: 2;
    }

    .sidebar .rpg-link {
      display: none;
    }

    .mobile-only {
      display: flex;
    }

    .lore-image-container {
      max-width: 400px;
      margin: 0 auto;
    }
  }

  @media (max-width: 768px) {
    .lore-title {
      font-size: 2.5rem;
    }
</style>
