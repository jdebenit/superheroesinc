---
import { getCollection } from "astro:content";
import Layout from "../../../layouts/Layout.astro";

export async function getStaticPaths() {
  const items = await getCollection("lore");
  return items.map((item) => {
    // Extract just the filename from the slug (e.g., "localizaciones/aquera" -> "aquera")
    const filename = item.slug.split("/").pop() || item.slug;
    return {
      params: { category: item.data.category, slug: filename },
      props: item,
    };
  });
}

const item = Astro.props;
const { Content } = await item.render();
---

<Layout title={item.data.title}>
  <article class="lore-item-container">
    <div class="breadcrumb">
      <a href={`/lore/${item.data.category}`} class="back-link"
        >‚Üê Volver a {item.data.category}</a
      >
    </div>

    <div class="content-grid">
      <aside class="sidebar">
        {
          item.data.image && (
            <div class="lore-image-container">
              <img
                src={item.data.image}
                alt={item.data.title}
                class="lore-image"
              />
            </div>
          )
        }

        <div class="lore-metadata">
          {
            item.data.source && (
              <div class="metadata-item">
                <span class="label">Fuente:</span>
                <span class="value">{item.data.source}</span>
              </div>
            )
          }
          {
            item.data.updatedDate && (
              <div class="metadata-item">
                <span class="label">Actualizado:</span>
                <time class="value">
                  {new Date(item.data.updatedDate).toLocaleDateString("es-ES", {
                    year: "numeric",
                    month: "long",
                    day: "numeric",
                  })}
                </time>
              </div>
            )
          }
        </div>
      </aside>

      <main class="main-content">
        <header class="lore-header">
          <h1 class="lore-title">{item.data.title}</h1>
        </header>

        <div class="lore-text">
          <Content />
        </div>
      </main>
    </div>
  </article>
</Layout>

<style>
  .lore-item-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem 2rem;
  }

  .breadcrumb {
    margin-bottom: 2rem;
  }

  .back-link {
    display: inline-block;
    font-family: var(--font-comic);
    text-decoration: none;
    color: var(--color-accent);
    font-weight: 600;
  }

  .back-link:hover {
    color: var(--color-primary);
  }

  .content-grid {
    display: grid;
    grid-template-columns: 350px 1fr;
    gap: 3rem;
    align-items: start;
  }

  .sidebar {
    position: sticky;
    top: 100px;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .lore-image-container {
    border: 4px solid var(--color-secondary);
    box-shadow: 8px 8px 0px var(--color-secondary);
    border-radius: 4px;
    overflow: hidden;
  }

  .lore-image {
    width: 100%;
    height: auto;
    display: block;
  }

  .lore-metadata {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1rem;
    background: var(--color-background-alt);
    border-radius: 8px;
  }

  .metadata-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .label {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 700;
    color: var(--color-accent);
  }

  .value {
    font-size: 0.9rem;
    color: var(--color-text);
    font-weight: 600;
  }

  .lore-header {
    margin-bottom: 2rem;
    border-bottom: 4px solid var(--color-secondary);
    padding-bottom: 1rem;
  }

  .lore-title {
    font-size: 4rem;
    color: var(--color-secondary);
    text-transform: uppercase;
    line-height: 1;
  }

  .lore-text {
    font-size: 1.1rem;
    line-height: 1.6;
  }

  .lore-text :global(h2) {
    font-family: var(--font-comic);
    font-size: 2rem;
    color: var(--color-primary);
    margin-top: 2rem;
    margin-bottom: 1rem;
    border-bottom: 2px solid var(--color-secondary);
  }

  .lore-text :global(h3) {
    font-size: 1.5rem;
    color: var(--color-secondary);
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .lore-text :global(p) {
    margin-bottom: 1rem;
  }

  .lore-text :global(a) {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 600;
    border-bottom: 1px solid transparent;
    transition: border-color 0.2s;
  }

  .lore-text :global(a:hover) {
    border-bottom-color: var(--color-primary);
  }

  .lore-text :global(blockquote) {
    border-left: 4px solid var(--color-accent);
    background: rgba(0, 0, 0, 0.05);
    padding: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: var(--color-secondary);
  }

  .lore-text :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 4px;
    margin: 1.5rem 0;
    box-shadow: var(--shadow-md);
  }

  .lore-text :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
  }

  .lore-text :global(th),
  .lore-text :global(td) {
    padding: 0.75rem;
    text-align: left;
    border-bottom: 1px solid var(--color-border);
  }

  .lore-text :global(th) {
    background-color: var(--color-secondary);
    color: white;
    font-weight: 600;
  }

  .lore-text :global(tr:hover) {
    background-color: rgba(0, 0, 0, 0.02);
  }

  .lore-text :global(ul),
  .lore-text :global(ol) {
    margin: 1rem 0 1rem 2rem;
  }

  .lore-text :global(li) {
    margin-bottom: 0.5rem;
  }

  @media (max-width: 1024px) {
    .content-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .sidebar {
      position: static;
      order: 2;
    }

    .lore-image-container {
      max-width: 400px;
      margin: 0 auto;
    }
  }

  @media (max-width: 768px) {
    .lore-title {
      font-size: 2.5rem;
    }
  }
</style>
